<!DOCTYPE html>
<html>
<head>
  <title>Chronos</title>
  <%= stylesheet_link_tag 'bootstrap/css/bootstrap' %>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="container">

    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="#">CHRONOS</a>
        <ul class="nav">
          <li class="active"><%= link_to 'Home', root_path %></li>
          <% if logged_in? %>
            <li><a href="#">Tracking</a></li>
            <li><a href="#">Reports</a></li>
            <li><%= link_to 'Projects', user_projects_path(@current_user) %></li>
            <li><%= link_to "Logout", :controller => 'sessions', :action => 'destroy' %></li>
          <% else %>
            <li><%= link_to "Login", :controller => 'sessions', :action => 'new' %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <%= render 'partials/flash', :flash => flash %>

    <%= yield :layout %>

  </div>
</body>
</html>
