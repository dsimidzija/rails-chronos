<h1>Projects</h1>

<table class="table table-hover">
  <tbody>
    <% for project in @projects %>
    <tr>
      <td>
        <%= link_to h(project.name), user_project_path(@current_user, project) %>
      </td>
      <td style="width: 100px;">
        <%= link_to 'Edit', edit_user_project_path(@current_user, project),
          :class => 'btn btn-mini' %>
        <%= link_to 'Delete', user_project_path(@current_user, project),
          :confirm => 'Are you sure?',
          :method => :delete,
          :class => 'btn btn-mini' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to 'Add new project', new_user_project_path(@current_user), :class => 'btn' %>
  </div>
</div>

