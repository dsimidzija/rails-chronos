<% content_for :title, 'Edit project' %>

<%= render :partial => 'partials/form_errors', :locals => { :model => @project } %>

<%= form_for :project, :url => user_project_path(@current_user, @project),
  :html => { :method => 'put' } do |form| %>

  <%= render :partial => 'form', :locals => { :form => form } %>

  <%= submit_tag "Submit", :class => 'btn' %>
  &nbsp;
  <%= link_to 'Cancel', user_project_path(@current_user, @project) %>

<% end %>

