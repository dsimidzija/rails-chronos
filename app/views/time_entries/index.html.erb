<h1>Time entries</h1>

<table class="table table-hover">
  <tbody>
    <% for entry in @time_entries %>
    <tr>
      <td>
        <%= link_to h(entry.project.name), user_project_path(@current_user, entry.project) %>
      </td>
      <td style="width: 50px;">
        <%= link_to 'Edit', edit_user_time_entry_path(@current_user, entry), :class => 'btn' %>
      </td>
      <td style="width: 50px;">
        <%= link_to 'Delete', user_time_entry_path(@current_user, entry),
          :confirm => 'Are you sure?',
          :method => :delete,
          :class => 'btn' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to 'Add new project', new_user_time_entry_path(@current_user), :class => 'btn' %>
  </div>
</div>

