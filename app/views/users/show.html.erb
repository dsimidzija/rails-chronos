<% content_for :title, "%s's profile" % [@user.name] %>

<dl>
  <dt>E-mail</dt>
  <dd><%= @user.email %>&nbsp</dd>
</dl>

<dl>
  <dt>Holidays country</dt>
  <dd><%= @user.country_name %>&nbsp</dd>
</dl>

<dl>
  <dt>Work hours per day</dt>
	<dd><%= @user.work_hours %>&nbsp</dd>
</dl>

<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to 'Edit profile', edit_user_path(@user), :class => 'btn' %>
  </div>
</div>
