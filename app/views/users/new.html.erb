<h1>Chronos registration</h1>

<%= render :partial => 'partials/form_errors', :locals => { :model => @user } %>

<%= form_for :user, :url => users_path do |form| %>

  <div class="input-prepend">
    <span class="add-on">A</span>
    <%= form.text_field :name, :placeholder => 'Name', :class => 'span4' %>
  </div>

  <div class="input-prepend">
    <span class="add-on">@</span>
    <%= form.text_field :email, :placeholder => 'E-mail', :class => 'span4' %>
  </div>

  <div class="input-prepend">
    <span class="add-on">*</span>
    <%= form.password_field :password, :placeholder => 'Password', :class => 'span4' %>
  </div>

  <div class="input-prepend">
    <span class="add-on">**</span>
    <%= form.password_field :password_confirmation, :placeholder => 'Password confirmation', :class => 'span4' %>
  </div>

  <%= submit_tag "Submit", :class => 'btn' %>

<% end %>
